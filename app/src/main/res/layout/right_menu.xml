<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/right_menu_cityName"
            style="@style/CityInfoText"
            android:text="城市名： - -"/>
        <TextView
            android:id="@+id/right_menu_postcode"
            android:layout_below="@+id/r"
            style="@style/CityInfoText"
            android:text="邮编    ： - -"/>
        <TextView
            android:id="@+id/right_menu_areacode"
            style="@style/CityInfoText"
            android:text="区号    ： - -"/>
        <TextView
            android:id="@+id/right_menu_altitude"
            style="@style/CityInfoText"
            android:text="海拔    ： - -"/>
        <TextView
            android:id="@+id/right_menu_latitude"
            style="@style/CityInfoText"
            android:text="经度    ： - -"/>
        <TextView
            android:id="@+id/right_menu_longtitude"
            style="@style/CityInfoText"
            android:text="维度    ： - -"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </LinearLayout>
</LinearLayout>